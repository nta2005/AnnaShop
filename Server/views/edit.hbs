            <form action="/edit" method="POST" autocomplete="off" style="width: 50%;">
                <input type="hidden" name="_id" value="{{Phone._id}}" />
                <div class="modal-body">

                    <div class="form-group">
                        <label>Tên</label>
                        <input class="form-control" name="name" value="{{Phone.name}}" />
                    </div>
                    <div class="form-group">
                        <label>Giá</label>
                        <input class="form-control" name="price" value="{{Phone.price}}" />
                    </div>
                    <div class="form-group">
                        <label>Hãng</label>
                        <input class="form-control" name="manufacturer" value="{{Phone.manufacturer}}" />
                    </div>
                    <div class="form-group">
                        <label>Ảnh</label>
                        <input type="file" class="form-control" name="image" value="{{Phone.image}}" />
                    </div>
                    <div class="form-group input">
                        <label>Phân khúc</label>
                        <select class="form-control" name="category" value="{{Phone.category}}">
                            <option value="Flagship">Flagship</option>
                            <option value="Tầm trung">Tầm trung</option>
                            <option value="Giá rẻ">Giá rẻ</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Màn hình</label>
                        <input class="form-control" name="display" value="{{Phone.display}}" />
                    </div>
                    <div class="form-group">
                        <label>Hệ điều hành</label>
                        <input class="form-control" name="system" value="{{Phone.system}}" />
                    </div>
                    <div class="form-group">
                        <label>Camera</label>
                        <input class="form-control" name="camera" value="{{Phone.camera}}" />
                    </div>
                    <div class="form-group">
                        <label>CPU</label>
                        <input class="form-control" name="cpu" value="{{Phone.cpu}}" />
                    </div>
                    <div class="form-group">
                        <label>RAM/ROM</label>
                        <input class="form-control" name="disk1" value="{{Phone.disk1}}" />
                    </div>
                    <div class="form-group">
                        <label>Thẻ nhớ</label>
                        <input class="form-control" name="disk2" value="{{Phone.disk2}}" />
                    </div>
                    <div class="form-group">
                        <label>Thẻ SIM</label>
                        <input class="form-control" name="sim" value="{{Phone.sim}}" />
                    </div>
                    <div class="form-group">
                        <label>Dung lượng pin</label>
                        <input class="form-control" name="pin" value="{{Phone.pin}}" />
                    </div>
                </div>
                <div class="modal-footer">
