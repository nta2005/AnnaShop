<body>



    <div class="wrapper">
        <!-- Sidebar Holder -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>ANNA SHOP</h3>
            </div>

            <ul class="list-unstyled components">
                <p>Nguyễn Thanh An</p>
                <li class="active">
                    <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false"><span
                            class="glyphicon glyphicon-home"></span>Trang chủ</a>
                    <ul class="collapse list-unstyled" id="homeSubmenu">
                        <li><a href="#">Home 1</a></li>
                        <li><a href="#">Home 2</a></li>
                        <li><a href="#">Home 3</a></li>
                    </ul>
                </li>
                <li>
                    <!-- <a href="#">About</a> -->
                    <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false"><span
                            class="glyphicon glyphicon-th-list"></span>Trang</a>
                    <ul class="collapse list-unstyled" id="pageSubmenu">
                        <h6 class="collapse-header">Màn hình đăng nhập</h6>
                        <li><a href="login">Đăng nhập</a></li>
                        <li><a href="register">Đăng ký</a></li>
                        {{!-- <li><a href="#" alert="Xin lỗi, chức năng đang bảo trì!" >Quên mật khẩu</a></li> --}}
                    </ul>
                </li>
                <!-- <li>
                    <a href="#">Portfolio</a>
                </li> -->
                <li onclick="contact();">
                    <a href="#"><span class="glyphicon glyphicon-send"></span>Liên hệ</a>
                </li>
            </ul>

            <ul class="list-unstyled CTAs">
                <li><a href="#" onclick="contact();" class="download">Download Project</a></li>
                <li><a href="login" class="article">Trở lại đăng nhập</a></li>
            </ul>
        </nav>

        <!-- Page Content Holder -->
        <div id="content">

            <nav class="navbar navbar-default">
                <div class="container-fluid">

                    <div class="navbar-header">
                        <button type="button" id="sidebarCollapse" class="btn btn-info navbar-btn">
                            <i class="glyphicon glyphicon-align-left"></i>
                            <!-- <span>Toggle Sidebar</span> -->
                        </button>
                    </div>

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            {{!-- <li><a href="#">Tài khoản</a></li>
                             <form action="/login" method="POST">
                               <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Tài khoản<span class="caret"></span></button>
                                <ul class="dropdown-menu">
                                    <li><a href="login.html">Đăng nhập</a></li>
                                    <li><a href="register.html">Đăng ký</a></li>
                                    <li><a href="forgot-password.html">Quên mật khẩu</a></li>
                                </ul>
                            </div> 
                            </form> --}}
                            {{!-- Modal --}}
                            <button type="button" class="btn btn-primary" data-toggle="modal"
                                data-target="#exampleModal" data-whatever="@mdo">Thêm</button>
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">THÊM MỚI SẢN PHẨM</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <form action="/upload" method="POST" enctype="multipart/form-data">
                                            <div class="modal-body">
                                                <div class="form-group">
                                                    <label>Tên</label>
                                                    <input type="text" class="form-control" name="name" />
                                                </div>
                                                <div class="form-group">
                                                    <label>Giá</label>
                                                    <input type="text" class="form-control" name="price" />
                                                </div>
                                                <div class="form-group">
                                                    <label>Hãng</label>
                                                    <input type="text" class="form-control" name="manufacturer" />
                                                </div>
                                                <div>
                                                    <label>Ảnh</label>
                                                    <input type="file" name="image" style="width: 100%;" />
                                                </div>
                                                <br>
                                                <div class="form-group input">
                                                    <label>Phân khúc</label>
                                                    <select class="form-control" name="category">
                                                    <option selected value="Flagship">Flagship</option>
                                                    <option value="Tầm trung">Tầm trung</option>
                                                    <option value="Giá rẻ">Giá rẻ</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label>Màn hình</label>
                                                    <input type="text" class="form-control" name="display" />
                                                </div>
                                                <div class="form-group">
                                                    <label>Hệ điều hành</label>
                                                    <input type="text" class="form-control" name="system" />
                                                </div>
                                                <div class="form-group">
                                                    <label>Camera</label>
                                                    <input type="text" class="form-control" name="camera" />
                                                </div>
                                                <div class="form-group">
                                                    <label>CPU</label>
                                                    <input type="text" class="form-control" name="cpu" />
                                                </div>
                                                <div class="form-group">
                                                    <label>RAM/ROM</label>
                                                    <input type="text" class="form-control" name="disk1" />
                                                </div>
                                                <div class="form-group">
                                                    <label>Thẻ nhớ</label>
                                                    <input type="text" class="form-control" name="disk2" />
                                                </div>
                                                <div class="form-group">
                                                    <label>Thẻ SIM</label>
                                                    <input type="text" class="form-control" name="sim" />
                                                </div>
                                                <div class="form-group">
                                                    <label>Dung lượng pin</label>
                                                    <input type="text" class="form-control" name="pin" />
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Đóng</button>
                                                <button type="submit" class="btn btn-primary">Thêm</button>
                                            </div>
                                        </form>

                        </ul>
                    </div>
                </div>
            </nav>
            {{!-- Table --}}
            <div class="content">
                <div class="container-fluid">
                    <table id="table" class="display cell-border" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Tên</th>
                                <th>Giá</th>
                                <th>Hãng</th>
                                <th>Phân khúc</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{# each phoneList}}
                            <tr>
                                <td style="text-align:center">
                                    <image src="http://localhost:3000/{{image}}" style="width: 80px;height:80px" />
                                </td>
                                <td>
                                    <p class=" data" style="color:blue;"><b>{{name}}</b></p>
                                </td>
                                <td>
                                    <p class=" data" style="color:red"><b>{{price}}đ</b></p>
                                </td>
                                <td>
                                    <p class=" data" style="color:green"><b>{{manufacturer}}</b></p>
                                </td>
                                <td>
                                    <p class=" data" style="color:#1c1c3b"><b>{{category}}</b></p>
                                </td>
                                <td style="text-align:center">
                                    <a href="/edit/{{_id}}" class="btn btn-primary btn-sm">Sửa</a>
                                    <a href="/delete/{{_id}}" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Bạn muốn gỡ mặt hàng này?')">Xoá</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>




